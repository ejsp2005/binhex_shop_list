<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="shops" name="shops">
      <t t-call="website.layout">
        <div id="wrap" class="carlos_danger_13">
          <div class="oe_structure" style="margin-bottom:50px;">
            <div class="oe_structure oe_empty" data-name="Style 2" data-editor-message="ARRASTRE BLOQUES AQUÍ"/>
            <div class="oe_structure" data-name="Style 1" data-editor-message="ARRASTRE BLOQUES AQUÍ">
              <div class="container pt32" data-name="Category Slider">
                <h3 class="te_slider_title">Categories associated with the part-time work these members do in our Company</h3>
              </div>
              <section class="te_category_slider pb32" style=""/>
            </div>

            <t t-foreach="categorias" t-as="categoria">
              <section class="py-3 py-sm-5 te_space_style pt0" data-name="Space"/>
              <section class="aos-init zoom-in pb24" data-name="Title" data-aos="zoom-in" t-attf-id="{{categoria.id}}" data-anchor="true">
                <div class="title_box">
                  <h4 t-esc="categoria.name"/>
                </div>
              </section>
              <t t-set="index" t-value="0"/>
              <t t-foreach="contactos" t-as="contacto">
                <t t-if="contacto['partnercat_id'] == categoria.id">
                  <t t-set="style" t-value="''" />
                  <t t-if="(index % 2) == 0">
                    <t t-set="style" t-value="'background-color: rgb(206, 222, 231);'" />
                  </t>
                  <t t-else="">
                    <t t-set="style" t-value="'background-color: rgb(233, 237, 239);'" />
                  </t>

                  <section class="aos-init pt0 fade-right pb4" data-name="Style 4" style="" data-aos="fade-right">
                    <div class="container">
                      <div class="row center_content" style="margin: auto;">
                        <div class="col-sm-4 col-lg-3 aos-init border" data-aos="none" t-att-style="style">
                          <section class="t_img_hover_1">
                            <a href="#" data-original-title="" title="" aria-describedby="tooltip934969">
                              <img class="img img-responsive img-fluid d-block mx-auto" alt="" t-attf-src="{{'/web/image?model=res.partner&amp;id='+str(contacto['id'])+'&amp;field=image_128&amp;'}}" data-original-title="" title="" aria-describedby="tooltip775951" style="width: 50%; height:auto;"/>
                            </a>
                          </section>
                        </div>
                        <div class="col-sm-4 border col-lg-2 center_text" t-att-style="style">
                          <section class="te_4_col2_content">
                            <div class="format_content">
                              <div class="content_title">Name</div>
                              <t t-esc="contacto['name']"/>
                            </div>
                          </section>
                        </div>
                        <div class="col-sm-4 border col-lg-2 center_text" t-att-style="style">
                          <section class="te_4_col2_content">
                            <div class="format_content">
                              <div class="content_title">Phone number</div>
                              <t t-esc="contacto['phone']"/>
                            </div>
                          </section>
                        </div>
                        <div class="col-sm-4 border col-lg-2 center_text" t-att-style="style">
                          <section class="te_4_col2_content">
                            <div class="format_content">
                              <div class="content_title">Job Position</div>
                              <t t-esc="contacto['job']"/>
                            </div>
                          </section>
                        </div>
                      </div>
                    </div>
                  </section>
                  <t t-set="index" t-value="index +1"/>
                </t>
              </t>
            </t>
          </div>
        </div>
      </t>
    </template>
  </data>
</odoo>
